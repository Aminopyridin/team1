.content
    margin-top 22px
    clearfix()

.content__tabs
    display block
.content__weather-short
    margin-top 22px

.tabs
    margin 0
    padding 0
    list-style none
    font-size 0
.tabs__item
    display inline-block
    font-size 13px
    line-height 1
    background-color #ffffff
    vertical-align top
    padding 5px 10px
    cursor pointer
    border-top 1px solid $borderColor
    border-bottom  1px solid $borderColor
.tabs__item_left
    border 1px solid $borderColor
    border-bottom-left-radius 4px
    border-top-left-radius 4px
.tabs__item_right
    border 1px solid $borderColor
    border-bottom-right-radius 4px
    border-top-right-radius 4px
.tabs__item_active
    background-color $activeColor
    cursor default



.weather-short
    width 100%
    text-align left
    border none
    border-collapse collapse
.weather-short__item
    width 11%
.weather-short__dayname
    font-size 22px
    margin 0
.weather-short__date
    font-size 13px
    margin 0
.weather-short__gap
    width 20px
.weather-short__dayweather
    padding 10px 10px 25px
    position relative
.weather-short__descr
    margin 0 0 5px
    font-size 10px
    line-height 1.2
.weather-short__temperature
    font-size 16px
    line-height 1
    margin 0
    position absolute
    bottom 10px
    left 10px
.weather-short__nightweather
    padding 10px
.weather-short__night-temperature
    font-size 13px
    color $lightText
    margin 0
